<?xml version="1.0"?>
<yandex>
    <!-- Define users -->
    <users>
        <!-- Default user configuration -->
        <default>
            <!-- No password required -->
            <password></password>

            <!-- Allow access from any network. Be cautious with this setting in a production environment -->
            <networks>
                <ip>::/0</ip>
            </networks>

            <!-- Assigning the default profile and quota -->
            <profile>default</profile>
            <quota>default</quota>

            <!-- Specify allowed databases -->
            <allow_databases>
                <database>default</database>
            </allow_databases>
        </default>
    </users>

    <!-- Profiles settings -->
    <profiles>
        <default>
            <!-- Example setting: Maximum memory usage for queries -->
            <max_memory_usage>10000000000</max_memory_usage>
        </default>
    </profiles>

    <!-- Quotas settings (not specifically configured here) -->
    <quotas>
        <default/>
    </quotas>
</yandex>
